
<div id="lessons">
  <h2>Yoga lesson information</h2>
  <div class="lesson-div">
   {{#with user}}


   {{/with}}
   
    {{#with lesson}}
      <p><strong>Name:</strong> {{name}}</p>
      <p><strong>Location:</strong> {{location.formattedAddress}}</p>
      <p><strong>Date:</strong> {{date}}</p>
      <p><strong>Time:</strong> {{time}}</p>
      <p><strong>Owner:</strong>{{owner.username}}</p>
      <img src="{{owner.imgPath}}" alt="Profile picture of the organiser" class="profile-pic">
      <p><strong>Spaces left:</strong> {{spacesLeft}}</p>

    {{/with}}
      {{#if isOwner}}
          <a href="/lessons/{{lesson._id}}/delete" class="button create-edit-btn">Delete this lesson ðŸ—‘</a>
          <a href="/lessons/{{lesson._id}}/edit" class="button create-edit-btn">Edit this lesson</a>
      {{/if}}

      {{#if isUser}}
        {{#if alreadyEnrolled}}
          <form action="/lessons/{{lesson._id}}/leave/{{session.currentUser._id}}" method="POST">
            <button class="button">Cancel participation</button>
          </form>
        {{else}}
          <form action="/lessons/{{lesson._id}}/join/{{session.currentUser._id}}" method="POST">
            <button class="button">Join Lesson</button>
          </form> 
        {{/if}}
      
      {{/if}}
    <div id="map_single_lesson" class="map"></div>
  </div>
   
      {{!-- {{#if message}}
          {{message}}
      {{/if}}  --}}
</div>

